---
const { ...offre} = Astro.props;
---

<div class="flex flex-col border w-96 bg-white rounded-3xl mb-16">
    <div class="px-6 py-8 sm:p-10 sm:pb-6">
      <div class="grid items-center justify-center w-full grid-cols-1 text-left">
        <div>
          <h2
            class="text-lg font-medium tracking-tighter text-gray-600 lg:text-3xl"
          >
            {offre.nomMaison}
          </h2>
          <p class="mt-2 text-sm text-gray-500">{offre.adresse}</p>
        </div>
        <div class="mt-6">
          <img
            class="object-cover w-full h-48 rounded-lg"
            src={offre.img}
            alt=""/>
  </div>